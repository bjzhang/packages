
# Kconfig file for package libmetal
menuconfig PKG_USING_LIBMETAL
    bool "libmetal"
    default n

if PKG_USING_LIBMETAL

    config PKG_LIBMETAL_PATH
        string
        default "/packages/system/OpenAMP/libmetal"

    choice
        prompt "Version"
        default PKG_USING_LIBMETAL_LATEST_VERSION
        help
            Select the package version

        config PKG_USING_LIBMETAL_LATEST_VERSION
            bool "latest"
    endchoice
          
    config PKG_LIBMETAL_VER
       string
       default "latest"    if PKG_USING_LIBMETAL_LATEST_VERSION

endif

